{
  "manifest_version": 3,
  "name": "Quick Link Copy",
  "version": "1.2.0",
  "description": "Cmd+Shift+L で現在のページのURLをクリップボードにコピー",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "copy-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "URLをコピー"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
