{
  "manifest_version": 3,
  "name": "Quick Link Copy",
  "version": "1.0.0",
  "description": "Cmd+Shift+L で現在のページのリンクをMarkdown形式やプレーンURLでクリップボードにコピー",
  "permissions": ["activeTab", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "copy-link-markdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "リンクをMarkdown形式でコピー"
    },
    "copy-link-plain": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "URLのみコピー"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
